<h2><%= t '.title',resource: resource_name.to_s.humanize %> </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t '.currently_waiting_confirmation_for_email' %>: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t  '.leave_blank_if_you_don_t_want_to_change_it' %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t  '.we_need_your_current_password_to_confirm_your_changes' %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

    <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :self_introduction %><br />
    <%= f.text_field :self_introduction, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.edit.update') %>
  </div>
<% end %>

<h3><%= t '.cancel_my_account' %></h3>

<p><%= t '.unhappy' %> <%= button_to t('devise.registrations.edit.cancel_my_account'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to t('devise.shared.links.back'), :back %>
