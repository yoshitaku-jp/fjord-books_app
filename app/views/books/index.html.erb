<p id="notice"><%= notice %></p>

<h1><%= t '.books' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t '.title' %></th>
      <th><%= t '.memo' %></th>
      <th><%= t '.author' %></th>
      <th><%= t '.picture' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('books.index.show'), book %></td>
        <td><%= link_to t('books.index.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('books.index.del'), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('books.index.new'), new_book_path %>
